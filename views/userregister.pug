doctype html
html(lang='en')
    head
        meta(charset='UTF-8')
        title Login page
        meta(name='viewport', content='width=device-width,initial-state=1')
        link(href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.2/css/bootstrap.min.css", rel="stylesheet", integrity="sha384-Smlep5jCw/wG7hdkwQ/Z5nLIefveQRIY9nfy6xoR1uRYBtpZgI6339F5dgvm/e9B", crossorigin="anonymous")
        script(src='bootstrap/js/bootstrap.js')
        style.
            .bg{
                color: #00b3ee;
                background-size: cover;
            }
            body{
                background: #00B7FF;
            }
            #log{
                background-color: white;
                padding: 50px 40px;
                margin-top: 50px;
                margin-bottom: 50px;
                border-radius: 10px;
                border-color: #0f0f0f;

            }
            h1{
                text-align: center;
                font-size: 40px;
                color: #005cbf;
            }
            label{
                font-size: 20px;
                color: #005cbf;
            }
            button{
                margin-left: 150px;
                margin-top: 25px;
            }
            a:hover {
                text-decoration-color: #005cbf;
                text-decoration: underline;
            }
            a{
                float: right;
                color: red;
                text-decoration-color: black;
                font-size: 20px;
            }
            img{
                height: 150px;
                margin-left: 125px;
            }
    body
        .container-fluid.bg
            .row
                .col-md-4.col-sm-4.col-xs-12
                .col-md-4.col-sm-4.col-xs-12
                    form#log(method='POST',action='/users/register')
                        //
                          <img src="bootstrap/css/images/PICT-Logo.jpg" alt="PICT-LOGO" class="rounded-circle" style="margin-left: 150px">
                        h1 Register
                        .form-group
                            label(style='padding-right: 40px') Name
                            input.form-control(type='text', name='name')
                        .form-group
                            label Email
                            input.form-control(type='email', name='email')
                        .form-group
                            label User-name
                            input.form-control(type='text', name='username')
                        .form-group
                            label Password
                            input.form-control(type='password', name='password')
                        .form-group
                            label Confirm Password
                            input.form-control(type='password', name='password2')
                        button.btn-primary.btn-lg(type='submit')
                            i.fas.fa-sign-in-alt
                            | Register
                        // - <button type="submit" class="btn-lg">Login</button>
                .col-md-4.col-sm-4.col-xs-12
