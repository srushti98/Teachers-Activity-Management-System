extends layout

block content
    h1 Edit form of Certified Exam Conducted
    form(method='POST',enctype='multipart/form-data',action='/exam/edit/'+exam.id)
        #form-group1
            label Organized at:
            input.form-control(name='organizer',type='text' value=exam.organizer)
        #form-group2
            label Date:
            input.form-control(name='date',type='date',max=yy + "-" + mm + "-" + dd ,value=exam.date)
        #form-group3
            label Number of count:
            input.form-control(name='count',type='number' ,value=exam.count)
        #form-group4
            label Subject:
            textarea.form-control(name='subject',type='text',value=exam.subject)
            label Class:
        #form-group5
            select(name='class', size=1,multiple='' ,value=exam.class)
                option(value='f') First Year
                option(value='s') Second Year
                option(value='t') Third Year
                option(value='b') Fourth Year
            br
        #form-group6
            label PO:
            input.form-control(name='po',type='text',value=exam.po)
        #form-group7
            label PSO:
            input.form-control(name='pso',type='text',value=exam.pso)
        #form-group8
            label file:
            input.form-control(name='file',type='file')
        br
        input.btn.btn-primary(type='submit',value='Submit')
