        style.
            * {box-sizing: padding-box}
            /* Set height of body and the document to 100% */
            body, html {
                height: 120%;
                margin: 0;
                font-family: Arial;
            }
            /* Style tab links */
            .tablink {
                background-color: #555;
                color: black;
                top-margin:200px;
                float: left;
                border: none;
                outline: none;
                cursor: pointer;
                padding: 14px 16px;
                font-size: 17px;
                width: 50%;
            }
            .tablink:hover {
                background-color: #777;
            }
            /* Style the tab content (and add height:100% for full page content) */
            .tabcontent {
                color: black;
                display: none;
                padding: 100px 20px;
                height: 120%;
            }
            #Conducted {background-color: skyblue;}
            #Attended {background-color: coral;}
